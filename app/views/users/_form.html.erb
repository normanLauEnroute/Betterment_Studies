<% if @user.errors.any? %>
    <h2>The following errors prevented this user from sign up</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @user) do |f| %>
    <p>
        <%= f.label :username %> <br />
        <%= f.text_field :username, placeholder: "Enter a username" %>
    </p>

    <p>
        <%= f.label :email %> <br />
        <%= f.email_field :email, placeholder: "Enter your email address" %>
    </p>

    <p>
        <%= f.label :password %> <br />
        <%= f.password_field :password, placeholder: "Choose a pass" %>
    </p>

    <p>
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update account") %>
    </p>

<% end %>